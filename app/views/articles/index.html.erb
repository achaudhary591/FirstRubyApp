<h1>Articles List Page</h1>

<table>

  <thead>
    <th>Title</th>
    <th>Description</th>
    <th>Show-Actions</th>
    <th>Destroy-Actions</th>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td> <button><%= link_to "Show this article", article %></button> </td>
        <td>  <%= button_to "Destroy", article_path(article), method: :delete %></td>
      </tr>
    <% end %>

  </tbody>

</table>

<button><%= link_to "New article", new_article_path %></button>

