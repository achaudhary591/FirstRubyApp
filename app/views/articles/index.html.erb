<h1>Articles List Page</h1>

<table>

  <thead>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td><%= button_to "Show", article_path(article), method: :get %></td>
        <td><%= button_to "Edit", edit_article_path(article), method: :get %></td>
        <td><%= button_to "Destroy", article_path(article), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %></td>
      </tr>
    <% end %>

  </tbody>

</table>
<p>
  <%= button_to "Create New Article", new_article_path, method: :get %>
</p>

